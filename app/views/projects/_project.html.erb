<% css_classes ||= "m-2"%>
<div class="card <%= css_classes %>">
  <% if project.image.attached? %>
    <a href="<%= project_path(project) %>">
      <%= image_tag project.image, class: 'card-img-top' %>
    </a>
  <% end %>
  <div class="card-body">
    <div class="d-flex w-100 justify-content-between">
      <a href="<%= project_path(project) %>">
        <h3 class="card-title"><%= project.name %></h3>
      </a>
    </div>
    <h5 class="card-subtitle mb-2 text-muted"><%= project.summary %></h5>
    <% if css_classes == "m-2" %>
      <p><%= project.description %></h1>
    <% end %>
  </div>
</div>
